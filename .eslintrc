{
  "root": true,
  "extends": [
    "@xylabs"
  ],
  "ignorePatterns": [
    ".yarn",
    "bin",
    "build",
    "coverage",
    "dist",
    "docs",
    "node_modules"

  ],
  "rules": {
    "import/no-nodejs-modules": ["off"],
    "import/no-default-export": "warn",
    "import/no-internal-modules": ["warn", {"allow": [
      "lodash/*"
    ]}]
  }
}